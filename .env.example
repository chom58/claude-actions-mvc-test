# アプリケーション設定
NODE_ENV=development
PORT=3000

# データベース抽象化レイヤー設定
DB_TYPE=sqlite

# SQLite設定
SQLITE_FILENAME=./database.sqlite

# PostgreSQL設定
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=claude_mvc_app
PG_USER=your_db_user
PG_PASSWORD=your_db_password
PG_SSL=false

# MySQL設定
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=claude_mvc_app
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password

# MongoDB設定
MONGODB_URL=mongodb://localhost:27017/claude_mvc_app

# Redis設定（キャッシュ用）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 既存データベース設定（後方互換性のため保持）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claude_mvc_app
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT設定（本番環境では強力なランダム秘密鍵を使用してください）
JWT_SECRET=your_strong_jwt_secret_key_minimum_32_chars
JWT_REFRESH_SECRET=your_strong_refresh_secret_key_minimum_32_chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# リフレッシュトークン暗号化設定
REFRESH_TOKEN_ENCRYPTION_KEY=your_encryption_key_minimum_32_chars

# OAuth設定
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# フロントエンド設定
FRONTEND_URL=http://localhost:3000

# その他の設定
CORS_ORIGIN=http://localhost:3000