{
  "name": "claude-web-server",
  "version": "1.0.0",
  "description": "Express.jsを使ったMVCパターンWebアプリケーション",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:debug": "nodemon --inspect=0.0.0.0:9229 src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "seed": "node src/seeders/seed.js",
    "build-index": "node src/tasks/buildSearchIndex.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build --no-cache",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:app": "docker-compose logs -f app",
    "docker:db:reset": "docker-compose down -v && docker-compose up -d db && sleep 5 && npm run seed",
    "docker:exec": "docker-compose exec app",
    "docker:shell": "docker-compose exec app sh",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:restart": "docker-compose restart",
    "docker:dev": "docker-compose up --build",
    "setup": "npm install && npm run docker:up && npm run seed"
  },
  "keywords": [
    "express",
    "web-server",
    "nodejs",
    "mvc",
    "sequelize"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.6.0",
    "sequelize": "^6.35.0",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.0",
    "@socket.io/redis-adapter": "^8.2.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "@faker-js/faker": "^8.3.1",
    "@axe-core/playwright": "^4.8.2"
  }
}
