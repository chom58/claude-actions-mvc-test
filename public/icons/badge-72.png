<?xml version="1.0" encoding="UTF-8"?>
<svg width="72" height="72" viewBox="0 0 72 72" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <circle cx="36" cy="36" r="36" fill="#FF1493"/>
  
  <!-- Glow effect -->
  <defs>
    <linearGradient id="badgeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FF1493" />
      <stop offset="100%" style="stop-color:#FF00FF" />
    </linearGradient>
    
    <filter id="glow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Badge text -->
  <text x="36" y="44" text-anchor="middle" 
        font-family="Arial, sans-serif" 
        font-size="16" 
        font-weight="900" 
        fill="white"
        filter="url(#glow)">HCC</text>
  
  <!-- Border -->
  <circle cx="36" cy="36" r="34" fill="none" stroke="white" stroke-width="2" opacity="0.8"/>
</svg>