<?xml version="1.0" encoding="UTF-8"?>
<svg width="72" height="72" viewBox="0 0 72 72" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="72" height="72" fill="#0a0a0a" rx="12"/>
  
  <!-- Neon gradient background -->
  <defs>
    <linearGradient id="neonGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FF1493;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#00FFFF;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#FF00FF;stop-opacity:0.8" />
    </linearGradient>
    
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FF1493" />
      <stop offset="100%" style="stop-color:#00FFFF" />
    </linearGradient>
    
    <!-- Glow filter -->
    <filter id="glow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background pattern -->
  <circle cx="18" cy="18" r="8" fill="url(#neonGradient)" opacity="0.3"/>
  <circle cx="54" cy="18" r="6" fill="#FF00FF" opacity="0.4"/>
  <circle cx="18" cy="54" r="5" fill="#00FFFF" opacity="0.5"/>
  <circle cx="54" cy="54" r="7" fill="#00FF00" opacity="0.3"/>
  
  <!-- Main logo text -->
  <text x="36" y="45" text-anchor="middle" 
        font-family="Arial, sans-serif" 
        font-size="18" 
        font-weight="900" 
        fill="url(#textGradient)"
        filter="url(#glow)">HCC</text>
  
  <!-- Subtitle -->
  <text x="36" y="55" text-anchor="middle" 
        font-family="Arial, sans-serif" 
        font-size="5" 
        font-weight="400" 
        fill="#ffffff" 
        opacity="0.8">HARAJUKU</text>
  
  <!-- Border highlight -->
  <rect width="72" height="72" fill="none" stroke="url(#neonGradient)" stroke-width="1" rx="12" opacity="0.6"/>
</svg>